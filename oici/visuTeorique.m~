function [ saumonError,barError] = visuTeorique(muSaumon, sigmaSaumon, muBar,sigmaBar)

vecMax = [ muBar+4*sigmaBar,muSaumon + 4*sigmaSaumon];
vecMin = [ muBar-4*sigmaBar,muSaumon - 4*sigmaSaumon];

maxX = max(vecMax);
minX = min(vecMin);

x=minX:0.1:maxX;

bar=normpdf(x,muBar,sigmaBar);
saumon=normpdf(x,muSaumon,sigmaSaumon);

figure(1) ;
hold on;
axis([minX maxX 0 0.4]);
axis square;
plot(x,bar,'b');
plot(x,saumon,'r');
fun = @(x,mu,sigma) normpdf(x,mu,sigma);
[th1,th2] = computeThresoldML(muSaumon,sigmaSaumon,muBar,sigmaBar)

deb1 = [th1 th1];
fin1 = [0 0.4];

plot(deb1,fin1);
 
deb2 = [th2 th2];
fin2 = [0 0.4];

plot(deb2,fin2);

barError    = integral(@(x)fun(x,muBar,sigmaBar),-1*Inf,th2);
barError    = barError / (sqrt(2*pi)*sigmaBar);
saumonError = integral(@(x)fun(x,muSaumon,sigmaSaumon),th2,Inf);
saumonError = saumonError/ (sqrt(2*pi)*sigmaSaumon);

end

