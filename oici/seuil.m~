function [ th1, th2 ] = seuil(mu1, sigma1, mu2, sigma2)
%UNTITLED2 Summary of this function goes here
%   Detailed explanation goes here
    if(sigma1 == sigma2)
            th1 = (mu1*mu1)-(mu2*mu2);
            th1 = th1/(mu1-mu2);
            th1 = th1/2;
            th2 = th1;
    else
        cte = -2*log(sigma1/sigma2);
        a = (1/(sigma1^2)) -(1/(sigma2^2));
        b = 2*((mu2/(sigma2^2))-(mu1/(sigma1^2)));
        c = (mu1^2)/(sigma1^2) - (mu2^2)/(sigma2^2) - cte;
        if(a==0)
                th1 = b+(cte-c);
                th2 = th1;
        else
            delta = (b*b) -(4*a*c);
            rac1 = (-b+sqrt(delta))/2*a;
            rac2 = (-b-sqrt(delta))/2*a;
            if(rac1 < rac2)
                th1 = rac1;
                th2 = rac2;
            else
                th1 = rac2;
                th2 = rac1;
            end
        end
    end
end